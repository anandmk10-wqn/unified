rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // These collections are public-facing and can be read by anyone.
    // Only authenticated admins can write to them.
    match /home_page_blocks/{documentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /navigation/{documentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /policies/{documentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // NEW RULE: Add this block to allow reading the old content structure
    match /content/{documentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Contact form submissions (inquiries) can be created by anyone,
    // but can only be read, updated, or deleted by authenticated admins.
    match /inquiries/{inquiryId=**} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Referral form submissions can be created by anyone,
    // but can only be read, updated, or deleted by authenticated admins.
    match /referrals/{referralId=**} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to write to the referral_documents folder if the file is under 5MB.
    match /referral_documents/{documentId} {
      allow read: if request.auth != null; // Only authenticated users (admins) can read documents.
      allow write: if request.resource.size < 5 * 1024 * 1024;
    }
  }
}